<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_birthday_sharing" tools:context=".BirthdaySharingActivity">

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/advertise_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="clickRefresh"
            android:text="Refresh Birthday Sharing" />


    <TextView
        android:id="@+id/txt_connection_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true" />

    <EditText
        android:id="@+id/et_select_birth_date"
        android:hint="Select Birth Date"
        android:textSize="15sp"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        style="@android:style/Widget.DeviceDefault.Light.Spinner"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_name"
        android:layout_margin="15dp"
        android:hint="Your Name"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_share_birthday"
        android:text="Share"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/txt_shared_birthday_message"
            android:layout_width="match_parent"
            android:text="@string/no_birthdays_shared"
            android:textSize="20sp"
            android:layout_margin="15dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_shared_birthday_name"
            android:layout_width="match_parent"
            android:text=""
            android:textSize="15sp"
            android:layout_margin="15dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_shared_birthday"
            android:layout_width="match_parent"
            android:text=""
            android:textSize="15sp"
            android:layout_margin="15dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_shared_birthday_age"
            android:layout_width="match_parent"
            android:text=""
            android:textSize="15sp"
            android:layout_margin="15dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>

</LinearLayout>
